@using DtoLayer.Dtos.LoginAppUserDtos
@model LoginViewDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/MainLayout/Index.cshtml";
}


<div class="container bg-light ">
    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <form method="post" class="col-12">
                <h3 class="text-center mb-4">Giriş Yap</h3>
                <div class="form-group">
                    <label for="username">Kullanıcı Adı</label>
                    <input type="text" class="form-control" asp-for="Username" placeholder="Kullanıcı Adınız">
                </div>
                <div class="form-group">
                    <label for="password">Şifre</label>
                    <input type="password" class="form-control" asp-for="Password" placeholder="Şifreniz">
                </div>
                <div class="p-3 text-end">
                    <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>

                </div>
             </form>
        </div>
    </div>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">×</button>
                        <h4 class="modal-title">Error Message</h4>
                    </div>
                    <div class="modal-body">
                        <p>@TempData["ErrorMessage"]</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <script>
            $(document).ready(function () {
                $("#myModal").modal();
            });
            alert("Tekrar Deneyin");

        </script>
        <div class="bg-danger m-5 p-5">
            <p>İşleminiz gerçekleştirlemedi lütfen tekrar deneyiniz</p>
            
        </div>
    }


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
   
