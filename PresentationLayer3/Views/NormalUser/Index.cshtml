@model DtoLayer.Dtos.NormalUserEditDtos.NormalUserEditDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/MainLayout/Index.cshtml";
}

<h1>Profil Düzenleme Sayfası</h1>


    
       
                            <form method="post">
                                <div class="form-group row pb-5">
                                    <label class="col-sm-3 col-form-label">Ad</label>
                                    <div class="col-sm-9">
                                        <input type="text" asp-for="name" class="form-control" placeholder="Ad">
                                    </div>
                                </div>
                                <div class="form-group row pb-5">
                                    <label class="col-sm-3 col-form-label">Soyad</label>
                                    <div class="col-sm-9">
                                <input type="text" asp-for="surname" class="form-control" placeholder="Soyad">
                                    </div>
                                </div>
                        <div class="form-group row pb-5">
                            <label class="col-sm-3 col-form-label">Password</label>
                            <div class="col-sm-9">
                                <input type="password" asp-for="password" class="form-control" placeholder="Pasword">
                            </div>
                        </div>
                         <div class="form-group row pb-5">
                            <label class="col-sm-3 col-form-label">Confirm Password</label>
                            <div class="col-sm-9">
                                <input type="text" asp-for="confirmpassword" class="form-control" placeholder="Confirm Pasword">
                            </div>
                        </div>
                        <div class="form-group row pb-5">
                             <label class="col-sm-3 col-form-label">Telefon Numarası</label>
                            <div class="col-sm-9">
                             <input type="text" asp-for="confirmpassword" class="form-control" placeholder="Telefon Numarası">
                              </div>
                           </div>
                         <div class="form-group row pb-5">
                                    <label class="col-sm-3 col-form-label">E-posta</label>
                                    <div class="col-sm-9">
                                        <input type="email" asp-for="mail" class="form-control" placeholder="E-posta">
                                    </div>
                                </div>
                                <div class="form-group row pb-5 ">
                                    <label class="col-sm-3 col-form-label">Telefon</label>
                                    <div class="col-sm-9">
                                        <input type="tel" asp-for="phonenumber" class="form-control" placeholder="Telefon">
                                    </div>
                                </div>
    <div class="form-group row pb-5">
        <label class="col-sm-3 col-form-label">Şehir</label>
        <div class="col-sm-9">
            <input type="text" asp-for="city" class="form-control" placeholder="Şehir">
        </div>
    </div>
    <div class="form-group row pb-5">
        <label class="col-sm-3 col-form-label">İlçe</label>
        <div class="col-sm-9">
            <input type="text" asp-for="district" class="form-control" placeholder="İlçe">
        </div>
    </div>
                        <div class=" p-3 text-end">
                            <button class="btn btn-outline-success">Güncelle</button>
                        </div>

                            </form>
                    
     



