@using EntityLayer.Concrete;
@model List<RecycableMaterial>
@{
    ViewData["Title"] = "GetMaterialWithUserIdForDelete";
    Layout = "~/Views/MainLayout/Index.cshtml";
}
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</head>

<h1>GetMaterialWithUserIdForDelete</h1>

<div class="container p-3 bg-light">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card">
                    <img src="~/@item.imageUrl" class="card-img-top" width="200px" height="400px" />
                    <div class="card-body">
                        <h5 class="card-title">
                            @item.RecycableMaterialType
                        </h5>
                        <p class="card-text"><strong> @item.LocationCity</strong> </p>
                        <p class="card-text ">@item.ProcessDate</p>
                        <p class="card-text">@item.LocationFullAdress</p>
                        <p class="card-text">@item.AppUser</p>
                        <p class="card-text">@item.LocationDistrict</p>
                        <p class="card-text">@item.RecycableMaterialType</p>
                        <p class="card-text">@item.isStatus</p>
                        <p class="card-text">@item.materialAmount</p>
                        <button class="btn btn-outline-danger" id="deleteBtn">Sil</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" ></script>

