@using EntityLayer.Concrete;
@model List<RecycableMaterial>
@{
    ViewData["Title"] = "GetMaterialWithUserIdForUpdate";
    Layout = "~/Views/MainLayout/Index.cshtml";
}

<h1>GetMaterialWithUserIdForUpdate</h1>

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</head>



<div class="container p-3 bg-light">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {

            <div class="col">

                <div class="card">
                    <img src="~/@item.imageUrl" class="card-img-top" width="200px" height="400px" />
                    <div class="card-body">
                        <h5 class="card-title">
                            @item.RecycableMaterialType
                        </h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">@item.ProcessDate</li>
                            <li class="list-group-item"><strong> @item.LocationCity</strong></li>
                            <li class="list-group-item">@item.AppUser/li>
                            <li class="list-group-item">@item.LocationDistrict</li>
                            <li class="list-group-item">@item.RecycableMaterialType</li>
                            <li class="list-group-item">@item.materialAmount</li>
                        </ul>
                        <div class="btn btn-outline-danger text-center">
                            <a href="/RecycAbleMaterial/UpdateMaterial/@item.RecycableMaterialID"> Güncelle</a>

                        </div>



                     

                    </div>
                </div>
            </div>

        }
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
