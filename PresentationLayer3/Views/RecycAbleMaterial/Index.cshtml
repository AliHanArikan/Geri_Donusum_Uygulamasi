<button class="open-button" onclick="openForm()">Chat</button>

<div class="chat-popup" id="myForm">
    <div class="form-container">
       

        <label for="msg"><b>Message</b></label>
     
        <a type="submit" class="btn" href="/OfferProccess/GetİncomingOffers">Gelen Teklifler</a>
        <a type="submit" class="btn" href="/OfferProccess/GetSendedOffer">Giden Teklifler</a>

        <a type="submit" class="btn" href="/OfferProccess/GetAcceptedOffers">Kabul Edilenler</a>
        <a type="submit" class="btn" href="/OfferProccess/GetDontAcceptedOffers">Kabul Edilmeyenler</a>
        <button type="button" class="btn cancel" onclick="closeForm()">Kapat</button>
    </div>
</div>

<script>
    function openForm() {
        document.getElementById("myForm").style.display = "block";
    }

    function closeForm() {
        document.getElementById("myForm").style.display = "none";
    }
</script>



