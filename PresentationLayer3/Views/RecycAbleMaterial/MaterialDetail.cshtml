@using EntityLayer.Concrete;
@model RecycableMaterial

@{
    ViewData["Title"] = "MaterialDetail";
    Layout = "~/Views/MainLayout/Index.cshtml";
}

<h1>MaterialDetail</h1>

<div class="row">
    <div class="col-sm-6">
       <div class="card-img">
            <img src="~/@Model.imageUrl"  width="200px" height="400px" />
       </div>
    </div>
    <div class="col-sm-6">
        <div class="card-body">
            <div>
                @Model.RecycableMaterialType
                @Model.LocationCity
            </div>
        </div>
    </div>
</div>