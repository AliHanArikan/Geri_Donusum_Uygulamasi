@using EntityLayer.Concrete;

@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/MainLayout/Index.cshtml";
    

}

<h1 class="text-center">Kullanıcı Başarı Sıralaması</h1>
<div class="text-center bg-warning m-5 p-5 rounded-5">


<table class="table table-sm ">
    <thead>
        <tr>
            
            <th scope="col">Resim</th>
            <th scope="col">Kullanıcı Adı</th>
            <th scope="col">Soyad</th>
            <th scope="col">Şehir</th>
            <th scope="col">Puan</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                
                <td><img src="~/@item.ImageUrl" alt="Kullanıcı Resmi" class="rounded-circle" width="100px" height="100px"></td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.City</td>
                 <td><strong>@item.scrore</strong></td> @* <td><strong>@item.scrore</strong></td> *@
            </tr>
            
        }
        
        
    </tbody>
</table>
</div>