@using EntityLayer.Concrete;

@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/MainLayout/Index.cshtml";
    

}

<h1 class="text-center">Kullanıcı Başarı Sıralaması</h1>
<table class="table table-sm bg-warning rounded-3 m-5">
    <thead>
        <tr>
            
            <th scope="col">Resim</th>
            <th scope="col">Kullanıcı Adı</th>
            <th scope="col">Soyad</th>
            <th scope="col">Şehir</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                
                <td><img src="~/@item.ImageUrl" alt="Kullanıcı Resmi" class="rounded-circle" width="50px" height="50px"></td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.City</td>
            </tr>
            
        }
        
        
    </tbody>
</table>